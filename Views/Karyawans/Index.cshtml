@model IEnumerable<UCP1_PAW_010_A.Models.Karyawan>

@{
    ViewData["Title"] = "Karyawan";
}

<h1>Karyawan</h1>

<p>
    <a asp-action="Create"><i class="fas fa-plus-square fa-2x"></i></a>
</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("ID")
            </th>
            <th>
                @Html.DisplayName("NIP")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nama)
            </th>
            <th>
                @Html.DisplayName("Jenis Kelamin")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alamat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayName("Jabatan")
            </th>
            <th>
                @Html.DisplayName("Golongan")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idkaryawan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisKelamin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdjabatanNavigation.Jabatan1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdgolonganNavigation.Idgolongan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idkaryawan"><i class="fas fa-pen-square fa-lg"></i></a>  
                <a asp-action="Details" asp-route-id="@item.Idkaryawan"><i class="fas fa-list-alt fa-lg"></i></a>  
                <a asp-action="Delete" asp-route-id="@item.Idkaryawan"><i class="fas fa-minus-square fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
