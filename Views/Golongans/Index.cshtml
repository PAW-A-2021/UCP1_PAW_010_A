@model IEnumerable<UCP1_PAW_010_A.Models.Golongan>

@{
    ViewData["Title"] = "Golongan";
}

<h1>Golongan</h1>

<p>
    <a asp-action="Create"><i class="fas fa-plus-square fa-2x"></i></a>
</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Golongan")
            </th>
            <th>
                @Html.DisplayName("Tunjangan Keluarga")
            </th>
            <th>
                @Html.DisplayName("Tunjangan Kesehatan")
            </th>
            <th>
                @Html.DisplayName("Uang Lembur")
            </th>
            <th>
                @Html.DisplayName("Uang Makan")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Golongan1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TjKeluarga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TjKesehatan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UangLembur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UangMakan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idgolongan"><i class="fas fa-pen-square fa-lg"></i></a>  
                <a asp-action="Details" asp-route-id="@item.Idgolongan"><i class="fas fa-list-alt fa-lg"></i></a>  
                <a asp-action="Delete" asp-route-id="@item.Idgolongan"><i class="fas fa-minus-square fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
