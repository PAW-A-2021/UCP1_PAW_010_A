@model IEnumerable<UCP1_PAW_010_A.Models.Gaji>

@{
    ViewData["Title"] = "Gaji";
}

<h1>Gaji</h1>

<p>
    <a asp-action="Create"><i class="fas fa-plus-square fa-2x"></i></a>
</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("No Slip")
            </th>
            <th>
                @Html.DisplayName("Nama Karyawan")
            </th>
            <th>
                @Html.DisplayName("Tanggal")
            </th>
            <th>
                @Html.DisplayName("Gaji Bulan")
            </th>
            <th>
                @Html.DisplayName("Lembur")
            </th>
            <th>
                @Html.DisplayName("Masuk")
            </th>
            <th>
                @Html.DisplayName("Sub Total")
            </th>
            <th>
                @Html.DisplayName("Pph (%)")
            </th>
            <th>
                @Html.DisplayName("Total")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoSlip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdkaryawanNavigation.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tanggal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GajiBulan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lembur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Masuk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pph)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idgaji"><i class="fas fa-pen-square fa-lg"></i></a>
                <a asp-action="Details" asp-route-id="@item.Idgaji"><i class="fas fa-list-alt fa-lg"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Idgaji"><i class="fas fa-minus-square fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
